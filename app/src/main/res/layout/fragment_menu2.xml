<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.alvaro.herramientas.Menu2Fragment"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <ImageButton android:id="@+id/koala"

            style="@style/botones"
            android:src="@drawable/koala"></ImageButton>
        <Space style="@style/espacio"/>
        <ImageButton android:id="@+id/pinguino"
            style="@style/botones"
            android:src="@drawable/penguins"></ImageButton>
        <Space style="@style/espacio"/>
        <ImageButton android:id="@+id/buscar"
            style="@style/botones"
            android:src="@android:drawable/ic_menu_search"></ImageButton>

    </LinearLayout>

</FrameLayout>
